<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="basePath">./logs</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <RollingFile name="File" fileName="${basePath}/automation.log"
                     filePattern="${basePath}/automation-%d{yyyy-MM-dd_HH-mm-ss}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
            <TimeBasedTriggeringPolicy /> <!-- Ensures a new file is created for every run -->
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="debug"> <!-- Here you can use multiple log levels: All, Trace, Debug, Info, Warn, Error, Fatal -->
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
        <!-- Example of a specific logger for a package with a different level -->
        <!-- This logger will specifically control logging for classes within the 'api.endpoints' package. -->
        <!-- 'additivity="false"' ensures that logs from this logger are not also sent to parent loggers (like Root). -->
        <Logger name="api.endpoints" level="info" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>
    </Loggers>

</Configuration>
